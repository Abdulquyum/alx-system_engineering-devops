#!/usr/bin/env bash
# redirection 301 - Moved Permanentlyâ€
# format - sed -i s/"string_to_replace"/"${new_string}"/g $file
sudo apt-get update
sudo apt-get -y install nginx
echo "Hello World!" > /var/www/html/index.nginx-debian.html
old_string="location"
string_replace="\n\tlocation /redirect_me {\n\t\treturn 301 https://youtu.be/dQw4w9WgXcQ;\n\t}\n"
sudo sed -i 's/"${old_string}"/"${string_replace}"/g' /etc/nginx/sites-enabled/default
service nginx restart
